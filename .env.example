# CPM Calculator Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# Application Configuration
# ===========================================
NEXT_PUBLIC_WEB_URL=https://cpmcalculator.site
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_LOCALE_DETECTION=false

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/cpmcalculator

# ===========================================
# Authentication Configuration
# ===========================================
# NextAuth.js Configuration
NEXTAUTH_URL=https://cpmcalculator.site
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# Payment Configuration
# ===========================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# ===========================================
# AI Services Configuration
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Replicate Configuration
REPLICATE_API_TOKEN=r8_your-replicate-api-token

# DeepSeek Configuration
DEEPSEEK_API_KEY=sk-your-deepseek-api-key

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key

# Kling AI Configuration
KLING_API_KEY=your-kling-api-key

# ===========================================
# Storage Configuration
# ===========================================
# Cloudflare R2 or AWS S3 Configuration
STORAGE_ENDPOINT=https://your-endpoint.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY=your-storage-access-key
STORAGE_SECRET_KEY=your-storage-secret-key
STORAGE_BUCKET=your-storage-bucket
STORAGE_DOMAIN=your-storage-domain.com

# ===========================================
# Analytics Configuration
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# OpenPanel Analytics
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=your-openpanel-client-id

# ===========================================
# Google AdSense
# ===========================================
NEXT_PUBLIC_GOOGLE_ADCODE=ca-pub-xxxxxxxxxx

# ===========================================
# OpenWidget Configuration
# ===========================================
NEXT_PUBLIC_OPENWIDGET_ENABLED=true
NEXT_PUBLIC_OPENWIDGET_ORG_ID=your-openwidget-org-id
NEXT_PUBLIC_OPENWIDGET_INTEGRATION=manual_settings
NEXT_PUBLIC_OPENWIDGET_PRODUCT=openwidget

# ===========================================
# Development Configuration
# ===========================================
# Set to 'development' for dev mode, 'production' for production
NODE_ENV=development

# Enable/disable features
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_PAYMENT_ENABLED=true
NEXT_PUBLIC_AI_FEATURES_ENABLED=true
